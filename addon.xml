<?xml version="1.0" encoding="UTF-8"?>
<addon
    id="plugin.video.picta"
    version="1.1.0"
    name="Picta"
    provider-name="crmartinez, oleksis">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
        <import addon="script.module.requests" version="2.22.0"/>
        <import addon="inputstream.adaptive" version="2.6.16"/>
        <import addon="inputstream.ffmpegdirect" version="1.21.3"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="addon.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Picta Plataforma de Contenidos Audiovisuales de Cuba</summary>
        <description lang="en_GB">Video plugin for Kodi mediacenter for www.picta.cu.</description>
        <disclaimer lang="en_GB">Videos are provided by www.picta.cu.</disclaimer>
        <platform>all</platform>
        <license>MIT</license>
        <website>https://ww.picta.cu</website>
        <source>https://github.com/oleksis/plugin.video.picta/tree/kodi_19</source>
        <news>1.1.0 (2021-06-18)
Restructure addon.
        </news>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
            <screenshot>resources/images/screenshot-01.png</screenshot>
            <screenshot>resources/images/screenshot-02.png</screenshot>
        </assets>
    </extension>
</addon>
